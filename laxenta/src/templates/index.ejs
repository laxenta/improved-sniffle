<script>
// Add this to your existing script section
function updateBotStatus(online) {
    const statusElement = document.getElementById('bot-status');
    if (statusElement) {
        statusElement.className = `status-badge ${online ? 'bg-green-500' : 'bg-red-500'} px-2 py-1 rounded text-sm`;
        statusElement.textContent = online ? 'Online' : 'Offline';
    }
}

function updateLatency(ping) {
    const latencyElement = document.getElementById('latency');
    if (latencyElement) {
        latencyElement.textContent = `Latency: ${ping}ms`;
    }
}

// Update status and latency every 30 seconds
setInterval(() => {
    fetch('/api/status')
        .then(response => response.json())
        .then(data => {
            updateBotStatus(data.online);
            updateLatency(data.ping);
        })
        .catch(() => {
            updateBotStatus(false);
            updateLatency('--');
        });
}, 30000);

// Initial status check
fetch('/api/status')
    .then(response => response.json())
    .then(data => {
        updateBotStatus(data.online);
        updateLatency(data.ping);
    })
    .catch(() => {
        updateBotStatus(false);
        updateLatency('--');
    });
</script>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/navbar.css">
</head>
<body>
  <nav class="navbar">
    <div class="navbar-top">
      <a href="/" class="navbar-brand">
        <img src="<%= avatar %>" alt="Bot Logo" class="brand-logo">
        <span class="brand-name"><%= botName %></span>
      </a>
      <button class="menu-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
      </button>
    </div>

    <div class="navbar-links">
      <a href="/commands"><i class="fas fa-terminal"></i> Commands</a>
      <a href="/support"><i class="fas fa-headset"></i> Support</a>
      <% if (user) { %>
        <a href="/dashboard"><i class="fas fa-chart-line"></i> Dashboard</a>
      <% } %>
    </div>

    <% if (user) { %>
      <a href="/" class="user-profile">
        <div class="profile-avatar-container">
          <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>" alt="User Avatar">
        </div>
        <span class="discord-tag"><%= user.username %></span>
      </a>
    <% } else { %>
      <a href="/auth/discord" class="user-profile">
        <i class="fab fa-discord"></i>
        <span class="discord-tag">Login with Discord</span>
      </a>
    <% } %>
  </nav>

  <div class="sidebar" id="sidebar">
    <a href="/commands"><i class="fas fa-terminal"></i> Commands</a>
    <a href="/support"><i class="fas fa-headset"></i> Support</a>
    <% if (user) { %>
      <a href="/dashboard"><i class="fas fa-chart-line"></i> Dashboard</a>
    <% } %>
    <% if (user) { %>
      <a href="/" class="user-profile">
        <div class="profile-avatar-container">
          <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>" alt="User Avatar">
        </div>
        <span class="discord-tag"><%= user.username %></span>
      </a>
    <% } else { %>
      <a href="/auth/discord" class="user-profile">
        <i class="fab fa-discord"></i>
        <span class="discord-tag">Login with Discord</span>
      </a>
    <% } %>
  </div>

  <div class="content">
    <h1>Welcome to the Dashboard</h1>
  </div>

  <script>
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('active');
    }
  </script>
</body>
</html>